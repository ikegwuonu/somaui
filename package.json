{
  "name": "somaui-workspace",
  "private": true,
  "version": "1.0.0",
  "description": "SomaUI Workspace",
  "workspaces": [
    "docs",
    "packages/*",
    "vite-app",
    "cli"
  ],
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write .",
    "build": "pnpm --filter packages/ui build && pnpm --filter docs build && pnpm --filter vite-app build && pnpm --filter cli build",
    "docs:build": "pnpm --filter docs build"
  },
  "author": "ikegwuonu",
  "license": "ISC",
  "packageManager": "pnpm@10.8.0",
  "engines": {
    "node": "22.16.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.12.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2"
  }
}
