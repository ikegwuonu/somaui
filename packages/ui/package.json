{
  "name": "@somaui/ui",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "private": false,
  "keywords": [
    "SomaUI",
    "somaui",
    "soma ui",
    "Cli Components",
    "React Components",
    "react ui"
  ],
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "description": "A Shadcn inspired version of RizzUI",
  "homepage": "https://github.com/ikegwuonu/somaui/packages/ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/ikegwuonu/somaui/packages/ui.git"
  },
  "bugs": {
    "url": "https://github.com/ikegwuonu/somaui/packages/ui/issues"
  },
  "scripts": {
    "clean": "rm -rf node_modules dist coverage",
    "test": "jest --coverage",
    "test:ci": "pnpm test --ci",
    "test:watch": "jest --watch",
    "build:batch": "node script/build-batch.js",
    "build": "npm run build:batch",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "@floating-ui/react": ">=0.25.4",
    "@headlessui/react": ">=2.0.0",
    "@tailwindcss/forms": "^0.5.0",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19",
    "tailwind-variants": "^3.2.0",
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@floating-ui/react": ">=0.25.4",
    "@headlessui/react": ">=2.0.0",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.18",
    "ts-jest": "^29.4.6",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "exports": {
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js",
      "require": "./dist/lib/*.cjs"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./*": {
      "types": "./dist/*/index.d.ts",
      "import": "./dist/*/index.js",
      "require": "./dist/*/index.cjs"
    },
    "./input": {
      "types": "./dist/input/index.d.ts",
      "import": "./dist/input/index.js",
      "require": "./dist/input/index.cjs"
    },
    "./button": {
      "types": "./dist/button/index.d.ts",
      "import": "./dist/button/index.js",
      "require": "./dist/button/index.cjs"
    }
  }
}
