{
  "name": "@somaui/ui",
  "version": "0.1.0",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "scripts": {
    "clean": "rm -rf dist",
    "build": " tsup src/index.ts src/components/*/index.ts src/components/*/*/index.ts --format esm,cjs --dts --out-dir dist --keep-names",
    "build:components": " tsup src/components/**/index.ts src/components/**/**/index.ts --format esm,cjs --out-dir dist --no-dts",
    "build:types": " tsc --project tsconfig.json --declaration --emitDeclarationOnly --outDir dist --skipLibCheck",
    "build:all": "pnpm run build:components && pnpm run build:types"
  },
  "peerDependencies": {
    "@floating-ui/react": ">=0.25.4",
    "@headlessui/react": ">=2.0.0",
    "@tailwindcss/forms": "^0.5.0",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19",
    "tailwind-variants": "^3.2.0",
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@floating-ui/react": ">=0.25.4",
    "@headlessui/react": ">=2.0.0",
    "@tailwindcss/forms": "^0.5.11",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./*": {
      "types": "./dist/*.d.mts",
      "import": "./dist/*.js",
      "require": "./dist/*.cjs"
    }
  }
}
