{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@somaui/*": ["packages/*/src"]
    }
  },

  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.js",
    "packages/**/*.jsx",
    "cli/**/*.ts",
    "cli/**/*.tsx",
    "cli/**/*.js",
    "cli/**/*.jsx"
  ],
  "exclude": ["node_modules", "dist", "build", "coverage"]
}
